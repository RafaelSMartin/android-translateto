            <!-- Button Translate -->
            <LinearLayout
                android:id="@+id/linear_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fitsSystemWindows="true"
                android:isScrollContainer="true"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_send">

                <io.supercharge.shimmerlayout.ShimmerLayout
                    android:id="@+id/shimmer_layout_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                <!-- Button Translate -->
                <Button
                    android:id="@+id/envia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/icon_automatic_translation"
                    android:drawablePadding="4dp"
                    android:paddingLeft="16dp"
                    android:text="@string/automatic_translate"
                    android:textAllCaps="false"
                    android:textColor="@color/blanco"
                    android:textSize="14sp"
                    android:theme="@style/MyButtonLogin"
                    android:visibility="visible" />
                </io.supercharge.shimmerlayout.ShimmerLayout>
                <!-- Button Human Translation-->
                <io.supercharge.shimmerlayout.ShimmerLayout
                    android:id="@+id/shimmer_layout_button_human"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:shimmer_animation_duration="1800"
                    app:shimmer_auto_start="true"
                    app:shimmer_color="@color/brillo">
                    <Button
                        android:id="@+id/bh_translation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/icon_human_translation"
                        android:drawablePadding="4dp"
                        android:paddingLeft="16dp"
                        android:text="@string/human_translation"
                        android:textAllCaps="false"
                        android:textColor="@color/blanco"
                        android:textSize="14sp"
                        android:theme="@style/MyButtonLogin"
                        android:visibility="visible" />
                </io.supercharge.shimmerlayout.ShimmerLayout>

            </LinearLayout>


            <!--</LinearLayout>-->

            <Button
                android:id="@+id/hacia_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Human Translation"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/card_synonyms" />

            <Button
                android:id="@+id/hacia_registro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="registro"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/hacia_profile" />

            <Button
                android:id="@+id/hacia_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="login"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/hacia_registro" />

            <Button
                android:id="@+id/hacia_profile_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="profile"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/hacia_login" />



        </android.support.constraint.ConstraintLayout>


    </android.support.v4.widget.NestedScrollView>

