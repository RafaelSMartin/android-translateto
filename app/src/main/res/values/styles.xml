<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--coCustomDialogword Dialog-->
        <item name="md_widget_color">@color/colorPrimary</item>
        <item name="md_positive_color">@color/colorPrimary</item>
    </style>

    <!--@dimen/abc_text_size_subhead_material -> 16sp-->
    <style name="FullWidthEdiTtext" parent ="Widget.AppCompat.EditText">
        <item name="android:padding">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/abc_text_size_subhead_material</item>
    </style>

    <!--@dimen/abc_text_size_subhead_material -> 20sp-->
    <style name="SignInTitle" parent ="Widget.AppCompat.EditText">
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="SignInSubTitle" parent ="Widget.AppCompat.EditText">
        <item name="android:padding">4dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SignInText" parent ="Widget.AppCompat.EditText">
        <item name="android:padding">4dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--ToolBar Text-->
    <style name="ToolbarTextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">?colorAccent</item>
    </style>
    <!--Toolbar size title-->
    <style name="ToolbarTextAppearance.Title">
        <item name="android:textSize">20sp</item>
    </style>
    <!--Toolbar size subtitle-->
    <style name="ToolbarTextAppearance.Subtitle">
        <item name="android:textSize">14sp</item>
    </style>
    <!--Toolbar-->
    <style name="MyToolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:background">?colorPrimary</item>
    </style>


    <!--LoginActivity EditTexts-->
    <!--Color EditText-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
    <!--texto flotante-->
    <style name="MyHintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!--Contador al sobrepasar-->
    <style name="MyOverflowText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black_overlay</item>
        <item name="android:background">@null</item>

    </style>
    <style name="MyEditTextFull" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:background">@null</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


    <!--LoginActivity Buttons-->
    <style name="MyButtonLogin" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/blanco</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <!--LoginActivity Buttons Aplha-->
    <style name="MyButtonLoginAlpha" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/blanco</item>
        <item name="colorButtonNormal">@color/colorPrimaryAlpha</item>
    </style>


    ProfileActivityfile layout-->
    <style name="MyLinearFlat" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/black_overlay</item>
    </style>


    <style name="AppTheme.ProgressBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/green</item>
    </style>

</resources>
